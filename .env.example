# NEXUS PRIME 环境变量示例
# 复制为 .env 并填入真实值

# Flask配置
FLASK_ENV=production
SECRET_KEY=change-this-to-a-random-secret-key-in-production
DEBUG=False

# 数据库URL（生产环境推荐PostgreSQL）
# SQLite（开发）
DATABASE_URL=sqlite:///instance/nexus_prime.db

# PostgreSQL（生产）
# DATABASE_URL=postgresql://username:password@localhost:5432/nexus_prime

# MySQL（可选）
# DATABASE_URL=mysql://username:password@localhost:3306/nexus_prime

# DeepSeek AI配置
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# 云存储配置 (Cloudinary) - 用于生产环境的头像和附件存储
# 方式1: 使用 Cloudinary URL（推荐）
# CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# 方式2: 分别配置
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# 云存储开关 (auto/true/false)
# auto: 生产环境且配置了 Cloudinary 时自动启用
# true: 强制启用（需要配置 Cloudinary）
# false: 强制禁用，使用本地存储
USE_CLOUD_STORAGE=auto

# 安全配置
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# 上传限制
MAX_CONTENT_LENGTH=16777216

# 日志级别
LOG_LEVEL=INFO

# 邮件配置（可选）
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password

# Redis（可选，用于缓存和会话）
REDIS_URL=redis://localhost:6379/0

# Sentry（可选，错误监控）
SENTRY_DSN=https://your-sentry-dsn
